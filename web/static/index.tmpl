<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">

    <link rel="stylesheet" type="text/css" href="/assets/semantic.min.css">
    <script
            src="https://code.jquery.com/jquery-3.1.1.min.js"
            integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
            crossorigin="anonymous"></script>
    <script src="/assets/semantic.min.js"></script>

    <style>
        .wrapper {
            display: flex;
        }

        .left {
            flex: 0 0 65%;
        }

        .right {
            flex: 1;
        }
    </style>
    <title>Peerster {{ .Name }}</title>
</head>
<body style="padding-left: 10%; padding-top:2%">

Your ID: <span class="small button" id="id_box"> {{ .Name }}</span>

<section id="search">
    <form action="" id="search_file">
        <div class="ui category search">
            <div class="ui icon input">
                <input class="prompt" type="text" placeholder="Search for a file..." name="query">
                <i class="search icon"></i>
            </div>
            <div class="results"></div>
        </div>
    </form>

    <div id="search_result">

    </div>

    <div id="found_files">
    </div>
</section>

<section id="upload">
    <form id="share_file_form" enctype="multipart/form-data" method="post" name="share_file_form">
        <div class="ui category search">
            <label for="file_to_share">Choose a file to share:</label> <br>
            <input type="file" class="ui input" id="file_to_share" name="file_to_share" required> <br>
            <input type="submit" value="send" id="share_file_btn">
        </div>
    </form>
    <div id="upload_result">
    </div>
</section>

<script src="/assets/script.js"></script>

</body>
</html>

